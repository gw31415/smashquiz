{
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "smashquiz",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": true
    },
    "windows": [
      {
        "label": "view",
        "fullscreen": false,
        "resizable": true,
        "width": 1280,
        "height": 720,
        "title": "SmashQuiz",
        "url": "/view",
        "closable": false
      },
      {
        "fullscreen": false,
        "resizable": false,
        "width": 800,
        "height": 600,
        "title": "SmashQuiz Admin",
        "url": "/"
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
